ul
	padding: 0;
	text-align: center;
	li
		margin-bottom 1em
		i
			margin-right 1em
		a
			display block
			padding .5em 0
.Perfil
	display flex
	flex-direction column
	justify-content space-between
	background black
	width 15.5em
	flex-shrink 0 
	color white
	&-header-figure
		text-align center 
		img
			width 8em
			height 8em
		&-figcaptions
			figcaption
				padding .5em
				border-radius 5px
				margin-top 1em
				&:first-child
					background #7C7171
				&:last-child
					background #656262
	&-contacto
		&-telefono
			background #625D5D
			&:hover
				background #0FDC79
		&-email
			background #0FDCBD
			&:hover
				background #6881CA
		&-contratar
			background #3CFF00
			&:hover
				background #FFFFFF
	&-RedesSociales
		&-fb
			background #55acee
			&:hover
				background #E3FF07
		&-twt
			background #3a5795
			&:hover
				background #D11414
		&-git
			background #f5f5f5
			&:hover
				background #8E631F
	&-mapa
		background red
		width 100%
		height 10em